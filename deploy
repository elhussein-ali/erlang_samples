use rebar (https://github.com/rebar/rebar)

SET PATH=C:\Program Files\erl5.10.2\bin
run "bootstrap.bat" in rebar reository
copy the generated files "rebar" and "rebar.cmd" into Path ENV EX: "C:\Program Files\erl5.10.2\bin"


# create new otp app
rebar create-app appid=myapp

# compile the app
rebar compile

# clean the app
rebar clean


# Fifo need git (http://git-scm.com/downloads)
SET PATH=C:\Program Files\Git\bin